
@{
    ViewBag.Title = "TunaShip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" ng-controller="Distribution/TunaShipController">
    <div class="row">
        <div class="col-xs-12">
            <span class="h4 text-muted">Tuna Ship</span>
            <span class="pull-right hidden-print">
                <a href="{{ result.filelink }}">
                    <img class="btn-link" align="bottom" src="~/Images/download.jpeg" width="35" height="35">
                </a>
                &nbsp;
                <img class="btn-link hidden-print" align="bottom" src="~/Images/refresh.png" width="40" height="40" ng-click="setDefault()">
                &nbsp;
                <img class="btn-link" align="bottom" src="~/Images/cancel.png" width="45" height="45" x-pageback>
            </span>
        </div>
    </div>
        <div class="spinner" ng-show="loading"></div>
        <div ng-show="dataload">
           
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-condensed table-hover table-bordered">
                        <tr>
                            <td>Count</td>
                            <td>StoreCode</td>
                            <td>StoreName</td>
                            <td>Street</td>
                            <td>City</td>
                            <td>ST</td>
                            <td>Zipcode</td>
                            <td>Phone</td>
                            <td>Region</td>
                            <td>Qty</td>
                        </tr>
                        <tr ng-repeat="list in result.output" ng-click="updateQty(list)">
                            <td>{{ $index+1 }}</td>
                            <td>{{ list.Storecode }}</td>
                            <td>{{ list.Storename }}</td>
                            <td>{{ list.Address }}</td>
                            <td>{{ list.City }}</td>
                            <td>{{ list.State }}</td>
                            <td>{{ list.Zipcode }}</td>
                            <td>{{ list.Phone }}</td>
                            <td>{{ list.Region }}</td>
                            <td>{{ list.Qty }}</td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>

</div>
