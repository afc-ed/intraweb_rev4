
@{
    ViewBag.Title = "OrderItemsAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="spinner" ng-show="loading"></div>
<div ng-show="dataload">

    <div class="modal-header text-left">
        <div class="pull-right">
            <img class="btn-link" src="~/Images/cancel.png" width="43" height="43" ng-click="cancel()">
        </div>

        <div>
            <span class="h4 text-muted">Add Item</span>
        </div>
    </div>

    <div class="modal-body text-left container">
        <div class="row col-xs-12">
            Select an item to add for Order# {{ header.Number }} :
            <table class="table table-condensed table-hover table-bordered">
                <tr>
                    <td>Item</td>
                    <td>Description</td>
                    <td>UOM</td>
                    <td>UOM Qty</td>
                    <td>Cost</td>
                    <td>Price</td>
                </tr>
                <tr ng-repeat="list in output" ng-click="save(list)">
                    <td>{{ list.Number }}</td>
                    <td>{{ list.Description }}</td>
                    <td>{{ list.UOM }}</td>
                    <td>{{ list.UOMQty }}</td>
                    <td>{{ list.Cost }}</td>
                    <td>{{ list.Price }}</td>
                </tr>
            </table>


        </div>
        <br />
        
    </div>

    <div class="modal-footer">

    </div>

</div>

