
@{
    ViewBag.Title = "PriceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" ng-controller="Ecommerce/PriceListController">
    <div class="row">
        <div class="col-xs-12">
            <span class="h4 text-muted">Price List</span> &nbsp; &nbsp;
               <input type="button" class="btn btn-info" value="Active Only" ng-click="setDefault('Active')" />
           
            <span class="pull-right">
                <img class="btn-link" align="bottom" src="~/Images/refresh.png" width="40" height="40" ng-click="setDefault('all')">
                &nbsp;
                <a href="{{ result.filelink }}">
                    <img class="btn-link" align="bottom" src="~/Images/download.jpeg" width="35" height="35">
                </a>    &nbsp;
                <img class="btn-link" align="bottom" src="~/Images/cancel.png" width="45" height="45" x-pageback>
            </span>
        </div>
    </div>
    <div class="spinner" ng-show="loading"></div>
    <div ng-show="dataload">
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-condensed">
                    <tr>
                        <td>Count</td>
                        <td>ProductCode</td>
                        <td>ProductName</td>
                        <td>Price</td>
                        <td>UOM</td>
                        <td>IsActive</td>
                    </tr>
                    <tr ng-repeat="list in result.output">
                        <td>{{ $index+1 }}</td>
                        <td>{{ list.Code }}</td>
                        <td>{{ list.Description }}</td>
                        <td>{{ list.Price }}</td>
                        <td>{{ list.UOM }}</td>
                        <td>{{ list.Status }}</td>
                    </tr>
                </table>
            </div>
        </div>

    </div>

</div>

